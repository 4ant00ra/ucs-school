# This program is distributed in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
# GNU General Public License for more details.
#
# You should have received a copy of the GNU General Public License
# along with this program; if not, write to the Free Software
# Foundation, Inc., 51 Franklin St, Fifth Floor, Boston, MA  02110-1301  USA

if [ ! -e /var/log/univention/server_password_change.log ] ; then
	touch /var/log/univention/server_password_change.log
	chown root:adm /var/log/univention/server_password_change.log
	chmod 640 /var/log/univention/server_password_change.log
fi

echo "Starting server password change (`date`)" >>/var/log/univention/server_password_change.log

eval `/usr/sbin/univention-baseconfig shell`


if [ -z "$server_role" ]; then
	echo "failed to change server password: empty baseconfig variable server/role"
	echo "failed to change server password: empty baseconfig variable server/role" >>/var/log/univention/server_password_change.log
	exit 1
fi
if [ -z "$ldap_hostdn" ]; then
	echo "failed to change server password: empty baseconfig variable ldap/hostdn"
	echo "failed to change server password: empty baseconfig variable ldap/hostdn" >>/var/log/univention/server_password_change.log
	exit 1
fi

if [ ! -e "/etc/machine.secret" ]; then
	echo "failed to change server password: /etc/machine.secret not found"
	echo "failed to change server password: /etc/machine.secret not found" >>/var/log/univention/server_password_change.log
	exit 1
fi

if [ -e "/var/lib/univention-directory-replication/failed.ldif" ]; then
	echo "failed to change server password: /var/lib/univention-directory-replication/failed.ldif exists"
	echo "failed to change server password: /var/lib/univention-directory-replication/failed.ldif exists" >>/var/log/univention/server_password_change.log
	exit 1
fi

if [ ! $((`date +"%j" | sed -e 's|^0*||'`%$server_password_interval)) = 0 ]; then exit 0; fi

new_password=`makepasswd --chars 8`
old_password=`cat /etc/machine.secret`

if [ -z "$new_password" ]; then
	echo "failed to change server password: makepasswd returned an empty password"
	echo "failed to change server password: makepasswd returned an empty password" >>/var/log/univention/server_password_change.log
	exit 1
fi

/usr/sbin/univention-admin computers/$server_role modify --binddn "$ldap_hostdn" --bindpwd $old_password --dn "$ldap_hostdn" --set password=$new_password  >>/var/log/univention/server_password_change.log 2>&1

if [ $? != 0 ]; then
	echo "failed to change server password for $ldap_hostdn"
	echo "failed to change server password for $ldap_hostdn" >>/var/log/univention/server_password_change.log
	exit 1
fi

echo "`date +"%y%m%d%H%M"`: $old_password" >>/etc/machine.secret.old
chmod 600 /etc/machine.secret.old


echo "$new_password" >/etc/machine.secret
chmod 600 /etc/machine.secret

if [ "$ldap_hostdn" = "$samba_user" ]; then
	/usr/bin/smbpasswd -w `cat /etc/machine.secret` >>/var/log/univention/server_password_change.log 2>&1
	if [ -n "$samba_ha_master" ]; then
		if [ -x /etc/heartbeat/resource.d/samba ]; then
			/etc/heartbeat/resource.d/samba reload >>/var/log/univention/server_password_change.log 2>&1
		fi
	else
		if [ -x /etc/init.d/samba ]; then
			/etc/init.d/samba restart >>/var/log/univention/server_password_change.log 2>&1
		fi
	fi
fi

if [ "$server_role" != "domaincontroller_master" -a "$server_role" != "domaincontroller_backup" ]; then
	if [ -x /etc/init.d/univention-directory-listener ]; then
		/etc/init.d/univention-directory-listener crestart >>/var/log/univention/server_password_change.log 2>&1
	fi
fi

echo "done (`date`)" >>/var/log/univention/server_password_change.log 2>&1
exit 0
