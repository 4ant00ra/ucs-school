remove_auth ()
{
	methods=`univention-baseconfig get $1`
	used=`echo $methods | grep $2`
	if [ -n "$used" ]; then
		univention-baseconfig set $1="`univention-baseconfig get $1 | sed -e "s|$2||"` "
	fi
}
add_auth ()
{
	methods=`univention-baseconfig get $1`
	used=`echo $methods | grep $2`
	if [ -z "$used" ]; then
		univention-baseconfig set $1="$methods $2"
	fi
}

eval `univention-baseconfig shell`

res=`host $ldap_server_name | grep "has address"`
if [ -z "$res" ]; then
	univention-baseconfig set domain/connection=false >/dev/null 2>&1
	remove_auth "auth/user/methods" krb5
	remove_auth "auth/user/methods" ldap
	remove_auth "auth/admin/methods" krb5
	remove_auth "auth/admin/methods" ldap
	exit 0
fi

ldapsearch -x -h $ldap_server_name -b $ldap_base -s base >/dev/null 2>&1

if [ $? = 1 ]; then
	univention-baseconfig set domain/connection=false >/dev/null 2>&1
	remove_auth "auth/user/methods" krb5
	remove_auth "auth/user/methods" ldap
	remove_auth "auth/admin/methods" krb5
	remove_auth "auth/admin/methods" ldap
	exit 0
fi


univention-baseconfig set domain/connection=true >/dev/null 2>&1
add_auth "auth/user/methods" krb5
add_auth "auth/user/methods" ldap
add_auth "auth/admin/methods" krb5
add_auth "auth/admin/methods" ldap
	

