set -e

eval `univention-baseconfig shell ifplugd/action/mount`
[ "$ifplugd_action_mount" = "yes" -o "$ifplugd_action_mount" = "true" ] ||  exit 0

case "$2" in
up)
	if [ -x /bin/mount ]; then
		/bin/mount -a
	fi
	;;
down)
	;;
esac
