set -e

#DEBHELPER#

case "$1" in
    configure)

		eval `univention-config-registry shell`
		univention-config-registry set \
			freeradius/conf/log/strippednames?yes \
			freeradius/conf/log/auth?yes \
			freeradius/conf/log/auth/badpass?yes \
			freeradius/conf/log/auth/goodpass?no \
			freeradius/firewall/server/start?2 \
			freeradius/firewall/server/end?19 \
			freeradius/firewall/privateip/start?240 \
			freeradius/firewall/privateip/end?254 \
			freeradius/firewall/enable/internalserver?false \
			freeradius/firewall/enable/broadcasts?false \
			freeradius/firewall/enable/radiusserver?false \
			freeradius/firewall/dnsserver?10.108.1.10 \
			freeradius/bridge/interface/name?br0 \
			freeradius/bridge/interface/primary?eth0 \
			freeradius/bridge/interface/secondary?eth1 \


		/usr/lib/sfb-freeradius/setupCA.sh

		update-rc.d sfb-wlan-bridge defaults 12 75 || true

		/etc/init.d/univention-iptables restart

		/etc/init.d/sfb-wlan-bridge restart || true

		/etc/init.d/freeradius restart
		;;

    abort-upgrade|abort-remove|abort-deconfigure)
		;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
		;;
esac


exit 0
