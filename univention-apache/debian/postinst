#DEBHELPER#

a2enmod auth_pam || true
a2enmod unique_id || true
a2enmod rewrite || true

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 2.0.11-1; then
	a2dismod ssl || true
	a2enmod ssl || true
elif [ "$1" = configure -a -z "$2" ]; then
	a2dismod ssl || true
	a2enmod ssl || true
fi

univention-baseconfig set apache2/autostart?"yes"
univention-baseconfig set apache2/loglevel?"warn"
univention-baseconfig set apache2/startsite?"ucs-overview/de.html"
univention-baseconfig set mail/alias/webmaster?root

eval $(univention-baseconfig shell)

if [ "$server_role"  = "domaincontroller_master" ] || [ "$server_role" = "domaincontroller_backup" ]; then
	/usr/lib/univention-install/08univention-apache.inst || true
fi

if [ -x /etc/init.d/apache2 ]; then
	# better stop&start, as this behaves differently to restart
	/etc/init.d/apache2 stop
	sleep 3
	/etc/init.d/apache2 start
fi

exit 0

