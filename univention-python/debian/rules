PACKAGE_NAME=univention
MODULE_NAME=univention

DEB_UPSTREAM_VERSION=$(shell dpkg-parsechangelog \
        | grep ^Version: | cut -d ' ' -f 2 | cut -d '-' -f 1)

PYVERS=$(shell pyversions -vr)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp: $(PYVERS:%=build-ext-%)
	dh_testdir
	touch $@
build-ext-%:
	dh_testdir
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp build-ext-2.4
	dh_clean

D=$(CURDIR)/debian/tmp

install: install-stamp
install-stamp: build-stamp $(PYVERS:%=install-ext-%)
install-ext-%:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -d debian/python-univention/usr/lib/python2.4/site-packages/univention/
	install -m 0644 modules/sitecustomize.py debian/python-univention/usr/lib/python$*/site-packages/
	install -m 0644 modules/dns.py debian/python-univention/usr/lib/python$*/site-packages/univention/
	install -m 0644 modules/misc.py debian/python-univention/usr/lib/python$*/site-packages/univention/
	install -m 0644 modules/uldap.py debian/python-univention/usr/lib/python$*/site-packages/univention/
	install -m 0644 modules/utf8.py debian/python-univention/usr/lib/python$*/site-packages/univention/
	install -m 0644 modules/password.py debian/python-univention/usr/lib/python$*/site-packages/univention/

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_install --sourcedir=debian/tmp
	dh_pycentral
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb


binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
