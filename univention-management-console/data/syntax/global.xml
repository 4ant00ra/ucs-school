<?xml version="1.0" encoding="UTF-8"?>
<umc version="2.0">
  <definitions>
	<syntax name="String">
	  <verify function="is_string"/>
	</syntax>
	<syntax name="Boolean">
	  <verify function="is_boolean"/>
	</syntax>
	<syntax name="Integer">
	  <verify function="is_integer"/>
	</syntax>
	<syntax name="Float">
	  <verify function="is_float"/>
	</syntax>
	<syntax name="Dictionary">
	  <verify function="is_dict"/>
	</syntax>
	<syntax name="List">
	  <verify function="is_list"/>
	</syntax>
	<syntax name="Selection">
	  <verify function="is_selection"/>
	</syntax>
	<syntax base="String" name="DateISO"> <!-- ISO 8601 -->
	  <regex>^(19|20)\d\d[- /.](0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])$</regex>
	</syntax>
	<syntax base="String" name="DateDIN"> <!-- DIN 1355-1 -->
	  <regex>^(0[1-9]|[12][0-9]|3[01])[- /.](0[1-9]|1[012])[- /.](19|20)\d\d$</regex>
	</syntax>
  </definitions>
</umc>
