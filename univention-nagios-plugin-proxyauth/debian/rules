export DH_COMPAT=4

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp
	gcc -o check_univention_proxyauth_suidwrapper check_univention_proxyauth_suidwrapper.c
	dh_testdir
	touch build-stamp

D=$(CURDIR)/debian/univention-nagios-plugin-proxyauth

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -rf ${DS} ${DC}
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	install -m 755 check_univention_proxyauth ${D}/usr/lib/nagios/plugins
	install -m 755 univention-proxyauth.cfg ${D}/etc/nagios-plugins/config
	install -m 755 -o root -g root check_univention_proxyauth_suidwrapper ${D}/usr/lib/nagios/plugins
	chmod u+s ${D}/usr/lib/nagios/plugins/check_univention_proxyauth_suidwrapper
	dh_install

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installpam --name=httpd-nagios
	dh_link
	dh_strip
	dh_compress
	dh_fixperms -X/usr/lib/nagios/plugins/check_univention_proxyauth_suidwrapper
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
