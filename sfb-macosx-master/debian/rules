#!/usr/bin/make -f

export DH_COMPAT=3

package=sfb-macosx-master
D=${CURDIR}/debian/sfb-macosx-master

build: build-stamp

build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp 
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 755 -o root -g root -d ${D}/usr/share/univention-ldap/schema
	install -m 755 usr/share/univention-ldap/schema/sfb-macosx.schema ${D}/usr/share/univention-ldap/schema/sfb-macosx.schema

	install -m 755 -o root -g root -d ${D}/usr/local/sbin/sfb-macosx-master
	install -m 755 usr/local/sbin/sfb-macosx-master/activateUsers ${D}/usr/local/sbin/sfb-macosx-master/activateUsers
	install -m 755 usr/local/sbin/sfb-macosx-master/activateGroups ${D}/usr/local/sbin/sfb-macosx-master/activateGroups
	install -m 755 usr/local/sbin/sfb-macosx-master/activateComputers ${D}/usr/local/sbin/sfb-macosx-master/activateComputers
	install -m 755 usr/local/sbin/sfb-macosx-master/prepareOU ${D}/usr/local/sbin/sfb-macosx-master/prepareOU
	install -m 755 usr/local/sbin/sfb-macosx-master/createComputerlist ${D}/usr/local/sbin/sfb-macosx-master/createComputerlist

	install -m 755 -o root -g root -d ${D}/usr/share/doc/sfb-macosx-master
	install -m 444 login.hook.univention ${D}/usr/share/doc/sfb-macosx-master/login.hook.univention
	install -m 444 edu.mit.Kerberos ${D}/usr/share/doc/sfb-macosx-master/edu.mit.Kerberos

	univention-install-config-registry

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
#	dh_installmenu -i
#	dh_installdebconf -i
#	dh_installlogrotate -i
#	dh_installemacsen -i
#	dh_installpam -i
#	dh_installmime -i
#	dh_installinit -i
#	dh_installcron -i
#	dh_installinfo -i
#	dh_undocumented -i
#	dh_installman -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_shlibdeps -i
	dh_installdeb -i
#	dh_perl -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
