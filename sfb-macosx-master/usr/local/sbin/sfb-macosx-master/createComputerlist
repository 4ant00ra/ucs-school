#!/bin/sh
#
echo -n "enter OU> "
read OU
echo -n "enter computerlist> "
read CL

if [ -z "$CL" ] ; then
  echo "Enter computerlist!"
  exit 1
fi

eval $(univention-config-registry shell)

ldapadd -x -D cn=admin,${ldap_base} -w $(cat /etc/ldap.secret) << EOF
dn: cn=${CL},cn=computer_lists,cn=macosx,ou=${OU},${ldap_base}
objectClass: apple-computer-list
cn: $CL
EOF
