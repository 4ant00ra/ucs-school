#!/bin/sh
#

echo -n "please enter group name> "
read GROUP

#echo -n "please enter server ip> "
#read SERVER


for dn in `ldapsearch -LLLx cn="$GROUP" uniqueMember| ldapsearch-wrapper | grep ^unique | cut -b 15-` ; do
  uid=$(echo "$dn" | sed -re 's/^uid=([^,]*),.*/\1/')
  univention-directory-manager users/user modify --dn "$dn" \
     --customattribute authAuthority=";basic;"
done

# DO NOT ACTIVATE THIS AS LONG LOGIN-HOOK IS ACTIVE !!!
#     --customattribute apple-user-homeurl="<home_dir><url>smb://${SERVER}/homes</url><path></path></home_dir>"
