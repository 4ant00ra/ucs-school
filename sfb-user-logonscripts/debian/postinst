#!/bin/sh

#DEBHELPER#

mkdir -p /var/lib/samba/userlogon/user
chown listener /var/lib/samba/userlogon/user
/etc/init.d/univention-directory-listener restart

univention-config-registry set sfb/userlogon/commonshares?"Marktplatz"
univention-config-registry set sfb/userlogon/commonshares/server/Marktplatz?`univention-config-registry get hostname`
univention-config-registry set sfb/userlogon/commonshares/letter/Marktplatz?M
univention-config-registry set sfb/userlogon/classshareletter?"K"
