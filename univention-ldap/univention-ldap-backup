eval `univention-baseconfig shell`

if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ]; then

	ldapbackupname="/var/univention-backup/ldap-backup_`date +%Y%m%d`.ldif"

	touch $ldapbackupname

	chmod 600 $ldapbackupname

	ldapsearch -h localhost -LLL -x -w `cat /etc/ldap.secret` -D "cn=admin,$ldap_base" -b "$ldap_base" >>$ldapbackupname 2>&1 || echo "LDAP could not be dumped!"

	gzip -9 $ldapbackupname 2>/dev/null

fi
