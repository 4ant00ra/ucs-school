version=`dpkg-parsechangelog | grep "Version" | sed -e 's/Version: //'`
copyrightyear=`date +%Y`

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	make
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f *~
	make clean
	dh_clean

MODULES_DEST=$(CURDIR)/debian/sfb-test-ldap-acls

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m755 sfb-test-ldap-acls ${MODULES_DEST}/usr/bin/
	# compile and install admin modules
	make install DESTDIR=${MODULES_DEST}
	find ${MODULES_DEST} -type d -name .svn | xargs rm -rf

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
# 	dh_installexamples
# 	dh_installmenu
# 	dh_installcron
# 	dh_installman
# 	dh_installinfo
	dh_installchangelogs
	dh_link
# 	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
# 	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
